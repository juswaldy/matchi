<h1>Old games</h1>

<table>
  <tr>
    <th>Date</th>
    <th>Team1</th>
    <th>vs</th>
    <th>Team2</th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr class="<%= cycle('item_odd', 'item_even') %>">
    <td><%= game.date %></td>
    <td><%= Team.find_by_id(game.team1id).name + " (#{game.team1score})"%></td>
    <td></td>
    <td><%= Team.find_by_id(game.team2id).name + " (#{game.team2score})"%></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

